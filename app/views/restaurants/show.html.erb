<h1><%= "Here is #{@restaurant.name}" %></h1>

<p><%= "#{@restaurant.name}" %></p>
<p><%= "Address: #{@restaurant.address} "%></p>
<p><%= "#{@restaurant.category.capitalize} food" %></p>
<p><%= "#{@restaurant.phone_number}" %></p>

<h3>Reviews</h3>
  <% @restaurant.reviews.each do |review| %>
<p class="border"><%= review.content %></p>
  <% end %>

<h3>Ratings</h3>
  <% @restaurant.reviews.each do|review| %>
<p><%= review.rating %></p>
  <% end %>

<%= link_to "Go back to all restaurant", restaurants_path %>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
